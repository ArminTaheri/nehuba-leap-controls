{
  "extends": "./node_modules/neuroglancer/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "neuroglancer/*": ["third_party/neuroglancer/*"],
      "nehuba/*": ["third_party/nehuba/*"],
      "nehuba-leap-controls/*": ["src/nehuba-leap-controls/*"]
    },
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noUnusedLocals": false 
  },
  "exclude": [
    "@reactivex/rxjs",
    "node_modules",
    "dist"
  ]
}
